{
  "name": "achilles-server",
  "version": "1.0.0",
  "description": "Backend server for Achilles Ltd",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "prestart": "npm install",
    "start": "nodemon server.js",
    "start:prod": "node server.js",
    "create-admin": "node createAdmin.js",
    "migrate-nlp": "node migrate-nlp.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --forceExit"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "natural": "^8.1.0",
    "pdf-parse": "^1.1.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  }
}
