{
  "name": "achilles-ltd",
  "version": "1.0.0",
  "description": "Achilles Ltd - Financial NLP System",
  "main": "server/server.js",
  "scripts": {
    "start": "concurrently \"npm run tika\" \"npm run server\" \"npm run client\" \"npm run nlp\"",
    "server": "cd server && node server.js",
    "client": "cd client && npm start",
    "tika": "node scripts/startTika.js",
    "nlp": "cd nlp_service && venv\\Scripts\\python.exe -m uvicorn main:app --reload"
  },
